<!DOCTYPE html>
<html>
<head>
  <title>Hiptime2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default">
		<div class=container>
			<div class="navbar-header">
				<%= link_to "Misiek", root_path, class: "navbar-brand" %>
			</div>
			<ul class="nav navbar-nav navbar-right">
				<% if current_user.present? %>
					<li><%= link_to "Edit User", edit_user_registration_path %></li>
					<li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
				<% else %>
					<li><%= link_to "New User", new_user_registration_path %></li>
					<li><%= link_to "Log In", new_user_session_path %> </li>
				<% end %>
			</ul>
			<% if user_signed_in? %>
				<%= link_to "New Item", new_item_path, class:"navbar-text navbar-link" %>
			<% end %>
		</div>
	</nav>

	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

	<div class="container">
		<%= yield %>
	</div>

</body>
</html>
